<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/favorite_photo_iv"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/light_spb_gray" />

    <ImageButton
        android:id="@+id/favorite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_remove_from_fav"
        app:layout_constraintEnd_toEndOf="@id/favorite_photo_iv"
        app:layout_constraintTop_toTopOf="@id/favorite_photo_iv" />

    <TextView
        android:id="@+id/favorite_title_tv"
        style="@style/Text.SemiBold.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favorite_photo_iv"
        tools:text="Первый день в Surf" />

    <TextView
        android:id="@+id/publication_date_tv"
        style="@style/Text.Medium.10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/light_spb_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favorite_photo_iv"
        tools:text="04.07.2022" />

    <TextView
        android:id="@+id/favorite_content_tv"
        style="@style/Text.Regular.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favorite_title_tv"
        tools:text="Сегодня был мой первый день в студии Surf..." />

</androidx.constraintlayout.widget.ConstraintLayout>